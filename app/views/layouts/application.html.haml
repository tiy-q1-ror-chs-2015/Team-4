!!!
%html
  %head
    %title Team4
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
  %body
    / Static navbar
%nav.navbar.navbar-default.navbar-static-top
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "#"} KickAss Gym Management System
    #navbar.navbar-collapse.collapse
      %ul.nav.navbar-nav
        %li
          = link_to "Home", root_path
        %li
          = link_to "About", welcome_about_path
        %li
          %a{:href => "mailto: kickassgym@kickassgym.com?subject=Employee Input", :target => "_blank"} Contact
        %li.dropdown
          %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            Navigate
            %span.caret
          %ul.dropdown-menu{:role => "menu"}
            %li
              = link_to "Programs", programs_path
            %li
              = link_to "Trainers", trainers_path
            %li
              = link_to "Clients", clients_path
            / %li.divider
            / %li.dropdown-header Nav header
            / %li
            /   %a{:href => "#"} Separated link
            / %li
            /   %a{:href => "#"} One more separated link
      %ul.nav.navbar-nav.navbar-right
        -if current_user
          %li
            = link_to "Logout: #{current_user.email}", destroy_user_session_path, method: :delete 
        -else
          %li
            = link_to "Login", new_user_session_path
          %li
            = link_to "Register", new_user_registration_path
    / /.nav-collapse
- if notice || alert
  %p.notice= notice
  %p.alert= alert
.container
  / Main component for a primary marketing message or call to action
  / .jumbotron
  /   %h1 KickAss Gym Management System
  /   .center-block
  /     - if current_user
  /       = "Gym Workout Programs Management Page"
  /     - else
  /       = "Welcome to the KickAss Gym Management System.  Please sign in above."
  /   %p
/ /container
/
  Bootstrap core JavaScript
  \==================================================
/ Placed at the end of the document so the pages load faster
%script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"}
= yield
