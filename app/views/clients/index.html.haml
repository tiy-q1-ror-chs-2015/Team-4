.div
.col-md-4
  = link_to "Welcome", root_path
  |
  = link_to "Add Client", new_client_path(@client)
  |
  =link_to "Back", root_path
 
  .row 
    %center
      %h1 Client List

  -@clients.each do |client|
    %center
      %strong
        =link_to client.first_name, client_path(client)
        =link_to client.last_name, client_path(client)
    %center
      %strong 
      =client.date_of_birth.strftime("%m/%d/%Y")
    %br
      %strong Goals:
      =client.goals
      %br
      =link_to "Edit", edit_client_path(client)
      |
      =link_to "Delete", client_path(client), method: :delete
.col-md-4
  %br
  %center 
    %h1 Programs Offered:
    - @programs.each do |program|
      %center
        %strong
        = link_to program.name, program_path(program)
.col-md-4
  %br
  %center 
    %h1 Trainers:
    - @trainers.each do |trainer|
      %center
        %strong
        =link_to trainer.first_name, trainer_path(trainer)
        =link_to trainer.last_name, trainer_path(trainer)
  

  